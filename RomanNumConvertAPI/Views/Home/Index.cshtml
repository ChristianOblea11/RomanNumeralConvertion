
@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row">
        <h3>Test Convert Endpoint (api/ConvertToNumeral) - only support integers ranging from 1 to 3999</h3>
    </div>
    <div class="row">
        <div class="col-md-3">
            <input id="convertInput" type="number" />

            <button id="convertButton">Convert</button>
        </div>
        
        <div class="col-md-9">
            <span id="convertResult"></span>
        </div>
    </div>
    <div class="row">
        <h3>Test Recent conversions Endpoint (api/RecentConversions)</h3>
    </div>
    <div class="row">
        <div class="col-md-3">
            <button id="getPreviousButton">Get Recent</button>
        </div>
        <div class="col-md-9">
            <ol id="recentResults"></ol>
        </div>
    </div>
    <div class="row">
        <h3>Test Top 10 Endpoint (api/TopConversions)</h3>
    </div>
    <div class="row">
        <div class="col-md-3">
            <button id="getTopTenButton">Get Top 10</button>
        </div>
        <div class="col-md-9">
            <ol id="topTenResults"></ol>
        </div>
    </div>
</div>


